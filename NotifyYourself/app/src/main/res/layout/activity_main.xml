<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/l"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity"
    tools:ignore="TextFields,HardcodedText">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ListView
            android:id="@+id/listview"
            android:layout_width="159dp"
            android:layout_height="46dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:background="#ffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="161dp"
            android:layout_height="46dp"
            android:layout_marginEnd="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/background_light"
            android:gravity="center"
            android:text="STATUS"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/listview"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/finddevicebtn"
            style="@android:style/ButtonBar"
            android:layout_width="170dp"
            android:layout_height="177dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:gravity="bottom|center_vertical|center"
            android:textAlignment="gravity"
            android:textColor="#0C0C0C"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/squarediscover"
            app:layout_constraintEnd_toEndOf="@+id/squarediscover"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/squarediscover"
            app:layout_constraintTop_toTopOf="@+id/squarediscover"
            app:layout_constraintVertical_bias="0.483"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/discoverbtn"
            android:layout_width="158dp"
            android:layout_height="173dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:textColor="#0C0C0C"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/squarefinddevice"
            app:layout_constraintEnd_toEndOf="@+id/squarefinddevice"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/squarefinddevice"
            app:layout_constraintTop_toTopOf="@+id/squarefinddevice"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/stopservicebtn"
            android:layout_width="159dp"
            android:layout_height="169dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/squarestopservice"
            app:layout_constraintEnd_toEndOf="@id/squarestopservice"
            app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintStart_toStartOf="@+id/squarestopservice"
            app:layout_constraintTop_toTopOf="@+id/squarestopservice"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/recordbtn"
            android:layout_width="164dp"
            android:layout_height="165dp"
            android:layout_marginTop="32dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/squarerecord"
            app:layout_constraintEnd_toEndOf="@+id/squarerecord"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/squarerecord"
            app:layout_constraintTop_toTopOf="@+id/squarerecord"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/squarediscover"
            android:layout_width="155dp"
            android:layout_height="167dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="72dp"
            android:background="#ffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.086"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listview"
            app:srcCompat="@drawable/square" />

        <ImageView
            android:id="@+id/searchimage"
            android:layout_width="67dp"
            android:layout_height="74dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="@+id/squarediscover"
            app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintStart_toStartOf="@+id/squarediscover"
            app:layout_constraintTop_toTopOf="@+id/squarediscover"
            app:srcCompat="@drawable/ic_devices_black_24dp"
            tools:ignore="MissingConstraints,VectorDrawableCompat" />


        <ImageView
            android:id="@+id/squarefinddevice"
            android:layout_width="155dp"
            android:layout_height="167dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="72dp"
            android:background="#ffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/squarediscover"

            app:layout_constraintTop_toBottomOf="@+id/textview2"
            app:srcCompat="@drawable/square" />

        <TextView
            android:id="@+id/finddevicetext"
            android:layout_width="99dp"
            android:layout_height="36dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:gravity="center"
            android:text="START SIGNALS"
            android:textColor="@android:color/black"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="@+id/squarefinddevice"
            app:layout_constraintTop_toBottomOf="@+id/deviceimage" />

        <ImageView
            android:id="@+id/deviceimage"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="@+id/squarefinddevice"
            app:layout_constraintHorizontal_bias="0.44"
            app:layout_constraintStart_toStartOf="@+id/squarefinddevice"
            app:layout_constraintTop_toTopOf="@+id/squarefinddevice"
            app:srcCompat="@drawable/ic_bluetooth_searching_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/squarerecord"
            android:layout_width="155dp"
            android:layout_height="167dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:background="#ffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/squarediscover"
            app:srcCompat="@drawable/square" />


        <ImageView
            android:id="@+id/squarestopservice"
            android:layout_width="155dp"
            android:layout_height="167dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:background="#ffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/squarerecord"
            app:layout_constraintTop_toBottomOf="@+id/squarefinddevice"
            app:srcCompat="@drawable/square" />

        <ImageView
            android:id="@+id/stopserviceimage"
            android:layout_width="73dp"
            android:layout_height="61dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="@+id/squarestopservice"
            app:layout_constraintStart_toStartOf="@+id/squarestopservice"
            app:layout_constraintTop_toTopOf="@+id/squarestopservice"
            app:srcCompat="@drawable/ic_bluetooth_disabled_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/recordimage"
            android:layout_width="74dp"
            android:layout_height="67dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/squarerecord"
            app:layout_constraintEnd_toEndOf="@+id/squarerecord"
            app:layout_constraintHorizontal_bias="0.569"
            app:layout_constraintStart_toStartOf="@+id/squarerecord"
            app:layout_constraintTop_toTopOf="@+id/squarerecord"
            app:layout_constraintVertical_bias="0.233"
            app:srcCompat="@drawable/database" />

        <TextView
            android:id="@+id/recordtext"
            android:layout_width="76dp"
            android:layout_height="29dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="RECORDS"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/squarerecord"
            app:layout_constraintEnd_toStartOf="@+id/squarestopservice"
            app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintStart_toStartOf="@+id/squarerecord"
            app:layout_constraintTop_toBottomOf="@+id/recordimage"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/stopservocetext"
            android:layout_width="81dp"
            android:layout_height="33dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="STOP SIGNALS"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/stopservicebtn"
            app:layout_constraintEnd_toEndOf="@+id/squarestopservice"
            app:layout_constraintHorizontal_bias="0.378"
            app:layout_constraintStart_toStartOf="@+id/squarestopservice"
            app:layout_constraintTop_toBottomOf="@+id/stopserviceimage"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:layout_width="94dp"
            android:layout_height="33dp"
            android:layout_marginEnd="8dp"

            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="FIND DEVICE"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="@+id/searchimage"
            app:layout_constraintHorizontal_bias="0.342"
            app:layout_constraintStart_toStartOf="@+id/searchimage"
            app:layout_constraintTop_toBottomOf="@+id/searchimage" />

    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:id="@+id/nv"
        app:itemIconTint="@color/colorPrimaryDark"
        app:itemTextColor="@color/colorPrimaryDark"
        app:menu="@menu/menu_items"
        tools:ignore="InvalidId">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>